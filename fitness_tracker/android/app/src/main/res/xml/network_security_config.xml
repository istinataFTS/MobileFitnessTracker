<?xml version="1.0" encoding="utf-8"?>
<!-- Network Security Configuration -->
<!-- Defines security settings for network connections -->
<network-security-config>
    
    <!-- Production configuration: No cleartext traffic allowed -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificates (Android OS) -->
            <certificates src="system" />
            
            <!-- Trust user-installed certificates (for debugging) -->
            <!-- Remove in production if not needed -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
